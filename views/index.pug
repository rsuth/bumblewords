doctype html
html 
  head 
    title bumblewords 
    link(rel="apple-touch-icon" href="apple-touch-icon.png")
    link(rel="shortcut icon" type="image/jpg" href="favicon.ico")
    link(rel='stylesheet', href='style.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body 
    h1(class='noselect') bumblewords
    nav 
      a(href='/leaderboard') leaderboard
      |  | 
      | 
      a(href='https://github.com/rsuth/bumblewords') github
    div(id='scoreboard')
    div(id='current-word')
    div(id='message')
    div(class='container')
      - var i = 0;
      - var k = 0;
        ul(id='hexGrid')
          while i < 3
            li(class='hex')
              div(class='hexIn')
                a(class='hexLink reg-letter' href='#')
                  h1(class='letter noselect')
            - i++;
          li(class='hex')
            div(class='hexIn')
              a(class='hexLink key-letter' href='#')
                h1(class='letter noselect')
          while k < 3
            li(class='hex')
              div(class='hexIn')
                a(class='hexLink reg-letter' href='#')
                  h1(class='letter noselect')
            - k++;
    div(id='controls')
      button(id='del-btn') DELETE
      button(id='shuffle-btn') ðŸ”„
      button(id='enter-btn') ENTER
    div
      ul(id='wordlist')
    script.
      const LETTERS = JSON.parse('!{letters}');
      const VALID_WORDS = JSON.parse('!{validWords}');
      const PANGRAM_BONUS = #{pangramBonus};
    script(src="script.js")  



        